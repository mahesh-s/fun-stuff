<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title :: Home Surfer</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @RenderSection("styles", required: false)
        <script>
            window.onerror = function (errorText, url, lineNumber) {
                var msg = 'errorText=' + errorText + '&url='
                    + url + '&lineNumber=' + lineNumber;

                var xhr = new XMLHttpRequest();
                xhr.open('POST', '/api/error', true);
                xhr.setRequestHeader("Content-type",
                    "application/x-www-form-urlencoded");
                xhr.send(msg);
            };
        </script>
    </head>
    <body class="container-fluid">
        <header>
            <div class="row-fluid">
                <div class="span6"><a href="/"><img alt="HomeSurfer" title="Home Surfer" src="/img/HomeSurferLogo.png" /></a></div>
                <span>
                    <span class="standout pull-right">
                        @if (ViewBag.IncludeManifest != null)
                        {
                            @Html.ActionLink("Manage Account", "manage", "account")
                        }
                        else
                        {
                            @Html.Partial("_LoginPartial")
                        }
                    </span>
                </span>
            </div>
        </header>
        <article>
            @RenderBody()
        </article>
        <footer>
            <small>&copy; @DateTime.Now.Year HomeSurfer</small>
        </footer>
        @RenderSection("breakout", required: false)
        @Scripts.Render("~/bundles/site")
        @RenderSection("scripts", required: false)
    </body>
</html>
